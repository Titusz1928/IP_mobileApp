<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightgray"
    tools:context=".ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <!--first row-->
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/background"
                    app:layout_constraintTop_toBottomOf="@+id/cv1">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/textView2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/border_top_green"
                            android:fontFamily="sans-serif-light"
                            android:gravity="center"
                            android:text="Setări"
                            android:textColor="@color/black"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </TableRow>

            <!--Second row-->
            <TableRow android:layout_marginTop="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv1"
                    android:layout_width="0dp"
                    android:layout_height="500dp"
                    android:layout_margin="4dp"
                    android:layout_weight="0.8"
                    android:background="@color/foreground"
                    app:cardBackgroundColor="@color/foreground"
                    app:cardCornerRadius="0dp">

                    <!-- Add your content here -->

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/etNumber"
                            android:layout_width="250dp"
                            android:layout_height="64dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bottom_border"
                            android:ems="10"
                            android:inputType="text"
                            android:text="Numărul"
                            android:textSize="24sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.246"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.913" />

                        <EditText
                            android:id="@+id/etStrada"
                            android:layout_width="250dp"
                            android:layout_height="64dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bottom_border"
                            android:ems="10"
                            android:inputType="text"
                            android:text="Strada"
                            android:textSize="24sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.246"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.764" />

                        <EditText
                            android:id="@+id/etCity"
                            android:layout_width="250dp"
                            android:layout_height="64dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bottom_border"
                            android:ems="10"
                            android:inputType="text"
                            android:text="Timișoara"
                            android:textSize="24sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.246"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.614" />

                        <EditText
                            android:id="@+id/etJudet"
                            android:layout_width="250dp"
                            android:layout_height="64dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bottom_border"
                            android:ems="10"
                            android:inputType="text"
                            android:text="Timiș"
                            android:textSize="24sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.246"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.464" />

                        <EditText
                            android:id="@+id/etTelefon"
                            android:layout_width="250dp"
                            android:layout_height="64dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bottom_border"
                            android:ems="10"
                            android:inputType="text"
                            android:text="+40 7134 400 555"
                            android:textSize="24sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.246"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.315" />

                        <EditText
                            android:id="@+id/etPrenume"
                            android:layout_width="250dp"
                            android:layout_height="64dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bottom_border"
                            android:ems="10"
                            android:inputType="text"
                            android:text="Titusz"
                            android:textSize="24sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.246"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.166" />

                        <EditText
                            android:id="@+id/etNume"
                            android:layout_width="250dp"
                            android:layout_height="64dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/bottom_border"
                            android:ems="10"
                            android:inputType="text"
                            android:text="Boros"
                            android:textSize="24sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.246"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.039" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv1b"
                    android:layout_width="0dp"
                    android:layout_height="500dp"
                    android:layout_margin="4dp"
                    android:layout_weight="0.2"
                    android:background="@drawable/white_subtle_border"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="40dp">

                    <!-- Add your content here -->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView_nume"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="50dp"
                            android:src="@drawable/edit_black" />

                        <ImageView
                            android:id="@+id/imageView_prenume"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="30dp"
                            android:src="@drawable/edit_black" />

                        <ImageView
                            android:id="@+id/imageView_telefon"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:src="@drawable/edit_black" />

                        <ImageView
                            android:id="@+id/imageView_judet"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:src="@drawable/edit_black" />

                        <ImageView
                            android:id="@+id/imageView_oras"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:src="@drawable/edit_black" />

                        <ImageView
                            android:id="@+id/imageView_strada"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:src="@drawable/edit_black" />

                        <ImageView
                            android:id="@+id/imageView_nr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:src="@drawable/edit_black" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv2a"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/white_subtle_border"
                    app:cardBackgroundColor="@color/lightgreen"
                    app:cardCornerRadius="20dp">


                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/white_subtle_border">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_subtle_border"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/textView_roman"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_weight="0.8"
                                android:src="@drawable/ro"
                                android:textColor="@android:color/black" />

                            <CheckBox
                                android:id="@+id/checkBox_roman"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_weight="0.2"
                                android:background="@color/white"
                                android:checked="true"
                                android:textColor="@color/black" />

                        </TableRow>


                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/white_subtle_border"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/textView_brit"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_weight="0.8"
                                android:src="@drawable/br"
                                android:textColor="@android:color/black" />

                            <CheckBox
                                android:id="@+id/checkBox_brit"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_weight="0.2"
                                android:background="@color/white"
                                android:checked="false"
                                android:textColor="@android:color/white" />

                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:background="@drawable/white_subtle_border"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/textView_hun"
                                android:layout_width="0dp"
                                android:layout_height="50dp"
                                android:layout_weight="0.8"
                                android:src="@drawable/hu"
                                android:textColor="@android:color/black" />

                            <CheckBox
                                android:id="@+id/checkBox_hun"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="20dp"
                                android:layout_weight="0.2"
                                android:background="@color/white"
                                android:checked="false"
                                android:textColor="@android:color/white" />

                        </TableRow>

                    </TableLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv2b"
                    android:layout_width="0dp"
                    android:layout_height="230dp"
                    android:layout_margin="4dp"
                    android:layout_weight="0.5"
                    android:background="@color/foreground"
                    app:cardBackgroundColor="@color/foreground"
                    app:cardCornerRadius="2dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <Button
                            android:id="@+id/button_resetpassword"
                            android:layout_width="match_parent"
                            android:layout_height="115dp"
                            android:background="@drawable/bottom_border"
                            android:padding="2dp"
                            android:text="Resetare parolă"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.982" />

                        <Button
                            android:id="@+id/button_logout"
                            android:layout_width="match_parent"
                            android:layout_height="115dp"
                            android:background="@drawable/bottom_border"
                            android:text="Deconectare"
                            android:textSize="16sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.0"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintVertical_bias="0.0" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_bottom_page"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="@color/lightgray"
                    app:layout_constraintTop_toBottomOf="@+id/cv1">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </TableRow>


        </TableLayout>
    </ScrollView>
</FrameLayout>